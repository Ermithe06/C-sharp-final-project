<ContentPage
    x:Class="Maui.Charting.Views.EditAppointmentPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <VerticalStackLayout Padding="15" Spacing="10">

            <Label Text="Edit Appointment"
                   FontSize="22"
                   HorizontalOptions="Center" />

            <Picker Title="Patient"
                    ItemsSource="{Binding Patients}"
                    SelectedItem="{Binding Appointment.PatientId}"
                    ItemDisplayBinding="{Binding FullName}" />

            <Picker Title="Physician"
                    ItemsSource="{Binding Physicians}"
                    SelectedItem="{Binding Appointment.PhysicianId}"
                    ItemDisplayBinding="{Binding FullName}" />

            <DatePicker Date="{Binding Appointment.Start}" />
            <Entry Placeholder="Duration"
                   Keyboard="Numeric"
                   Text="{Binding Appointment.DurationMinutes}" />

            <Entry Placeholder="Room"
                   Text="{Binding Appointment.Room}" />

            <Button Text="Save"
                    BackgroundColor="Green"
                    TextColor="White"
                    Command="{Binding SaveCommand}" />

            <Button Text="Delete"
                    BackgroundColor="Red"
                    TextColor="White"
                    Command="{Binding DeleteCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
